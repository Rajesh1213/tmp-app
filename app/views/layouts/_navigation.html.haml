= link_to "Task-Photo-Facebook", root_path, :class => 'brand'
%ul{:class => 'nav pull-right'} 
  - if user_signed_in?
    -if current_user.admin?
      %li  
        = link_to('people', home_people_path)
    %li
      = link_to (image_tag("#{current_user.image_url}", :size => '20x20'))
    %li
      = link_to (current_user.name)
    %li
      = link_to('Logout', signout_path)
  - else
    %li
      = link_to('Login', signin_path)